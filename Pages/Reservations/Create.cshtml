@page
@model StayTrackPro.Pages.Reservations.CreateModel
@{
    ViewData["Title"] = "Create Reservation";
}

<div class="container mt-4">
    <h2 class="mb-4">Create a New Reservation</h2>

    <form method="post">
        <div class="mb-3">
            <label asp-for="Reservation.GuestFullName" class="form-label"></label>
            <input asp-for="Reservation.GuestFullName" class="form-control" />
            <span asp-validation-for="Reservation.GuestFullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Reservation.SuiteId" class="form-label"></label>
            <input asp-for="Reservation.SuiteId" class="form-control" />
            <span asp-validation-for="Reservation.SuiteId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Reservation.ArrivalDate" class="form-label"></label>
            <input asp-for="Reservation.ArrivalDate" type="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Reservation.DepartureDate" class="form-label"></label>
            <input asp-for="Reservation.DepartureDate" type="date" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-page="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
