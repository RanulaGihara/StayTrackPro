@page "{id:int}"
@model StayTrackPro.Pages.Reservations.DeleteModel
@{
    ViewData["Title"] = "Delete Reservation";
}

<div class="container mt-4">
    <h2 class="text-danger mb-3">Delete Confirmation</h2>

    <p>Are you sure you want to delete this reservation?</p>

    <ul class="list-group mb-4">
        <li class="list-group-item"><strong>Guest:</strong> @Model.Reservation.GuestFullName</li>
        <li class="list-group-item"><strong>Suite ID:</strong> @Model.Reservation.SuiteId</li>
        <li class="list-group-item"><strong>Arrival:</strong> @Model.Reservation.ArrivalDate.ToShortDateString()</li>
        <li class="list-group-item"><strong>Departure:</strong> @Model.Reservation.DepartureDate.ToShortDateString()</li>
    </ul>

    <form method="post">
        <input type="hidden" asp-for="Reservation.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
