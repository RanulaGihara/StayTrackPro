@page
@model StayTrackPro.Pages.Reservations.IndexModel
@{
    ViewData["Title"] = "All Reservations";
}

<div class="container mt-4">
    <h2 class="mb-3">Reservations</h2>

    <a asp-page="Create" class="btn btn-primary mb-3">Create New Reservation</a>

    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>Guest</th>
                <th>Suite</th>
                <th>Arrival</th>
                <th>Departure</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Reservations)
            {
                <tr>
                    <td>@item.GuestFullName</td>
                    <td>@item.SuiteId</td>
                    <td>@item.ArrivalDate.ToShortDateString()</td>
                    <td>@item.DepartureDate.ToShortDateString()</td>
                    <td>
                        <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">View</a>
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
