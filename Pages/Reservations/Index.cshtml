@page
@model StayTrackPro.Pages.Reservations.IndexModel
@{
    ViewData["Title"] = "All Reservations";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Reservations</h5>
            <a asp-page="Create" class="btn btn-light btn-sm">+ New Reservation</a>
        </div>

        <div class="card-body">
            <table class="table table-bordered table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Guest</th>
                        <th>Suite</th>
                        <th>Arrival</th>
                        <th>Departure</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Reservations)
                    {
                        <tr>
                            <td>@item.GuestFullName</td>
                            <td>@item.SuiteId</td>
                            <td>@item.ArrivalDate.ToShortDateString()</td>
                            <td>@item.DepartureDate.ToShortDateString()</td>
                            <td>
                                <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1" title="View">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-1" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
