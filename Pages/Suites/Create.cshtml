@page
@model StayTrackPro.Pages.Suites.CreateModel
@{
    ViewData["Title"] = "Add New Suite";
}

<div class="container mt-4">
    <h2 class="mb-4">Add New Suite</h2>

    <form method="post">
        <div class="mb-3">
            <label asp-for="Suite.SuiteName" class="form-label"></label>
            <input asp-for="Suite.SuiteName" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Suite.Type" class="form-label"></label>
            <input asp-for="Suite.Type" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
