@page
@model StayTrackPro.Pages.Chatbot.AssistantModel
@{
    ViewData["Title"] = "Booking Assistant";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0" style="height: 80vh;">

                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                        <span class="text-primary fw-bold"></span>
                    </div>
                    <h5 class="mb-0 flex-grow-1">Booking Assistant</h5>
                    <span class="badge bg-success rounded-pill">Online</span>
                </div>

                <div class="card-body d-flex flex-column p-0" style="height: calc(100% - 140px);">
                    <div class="flex-grow-1 overflow-auto p-3" id="chatMessages">
                        @if (Model.Messages == null || !Model.Messages.Any())
                        {
                            <div class="text-center py-5">
                                <h6 class="text-muted mb-2">Welcome to your Booking Assistant!</h6>
                                <p class="text-muted small mb-0">Ask me anything about room availability, pricing, or reservations.</p>
                            </div>
                        }
                        else
                        {
                            @foreach (var msg in Model.Messages)
                            {
                                if (msg.Sender == "user")
                                {
                                    <div class="d-flex justify-content-end mb-3">
                                        <div class="d-flex align-items-start" style="max-width: 70%;">
                                            <div class="bg-primary text-white rounded-3 p-3 me-2">
                                                <div class="mb-0">@msg.Content</div>
                                            </div>
                                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center text-white fw-bold"
                                                 style="width: 32px; height: 32px; font-size: 0.8rem;">
                                                U
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="d-flex justify-content-start mb-3">
                                        <div class="d-flex align-items-start" style="max-width: 70%;">
                                            <div class="bg-warning rounded-circle d-flex align-items-center justify-content-center me-2"
                                                 style="width: 32px; height: 32px;">
                                                <i class="bi bi-robot" style="font-size: 0.9rem;"></i>
                                            </div>
                                            <div class="bg-light border rounded-3 p-3">
                                                <div class="mb-0">@msg.Content</div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        }
                    </div>
                </div>

                <div class="card-footer bg-light border-top">
                    <form method="post" class="d-flex gap-2">
                        <input type="text"
                               name="Query"
                               class="form-control rounded-pill"
                               placeholder="Ask something like: Is a Deluxe suite available on Friday?"
                               required
                               autocomplete="off" />
                        <button class="btn btn-primary rounded-pill px-4" type="submit">
                            <i class="bi bi-send"></i> Send
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
